{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
